[user]
    name = <full name>
    email = <email address>
    username = <username>
[core]
    # set to 'true' on Windows
    autocrlf = input
    editor = vim
    excludesfile = </path/to/gitignore>
[web]
    browser = firefox
[diff]
    tool = kdiff3
[difftool]
    prompt = false
[merge]
    tool = kdiff3
[push]
    default = simple
[color]
    ui = auto
[alias]
    lol = log --oneline --decorate
    logd = log --decorate
    stat = status
